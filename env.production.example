# LarryBot2 Production Environment Configuration
# Copy this file to .env.production and update with your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Your Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram User ID (get from @userinfobot)
ALLOWED_TELEGRAM_USER_ID=your_user_id_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database file path (default: larrybot.db)
DATABASE_PATH=larrybot.db

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secure error messages (hide sensitive data in error messages)
SECURE_ERROR_MESSAGES=true

# Log sensitive data (should be false in production)
LOG_SENSITIVE_DATA=false

# Maximum requests per minute (rate limiting)
MAX_REQUESTS_PER_MINUTE=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum log file size in MB
MAX_LOG_SIZE_MB=10

# Number of log backup files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Cache TTL in seconds (how long to cache data)
CACHE_TTL_SECONDS=300

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=5

# Request timeout in seconds
REQUEST_TIMEOUT_SECONDS=30

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Enable health checks
HEALTH_CHECK_ENABLED=true

# Enable performance monitoring
PERFORMANCE_MONITORING=true

# Enable error reporting
ERROR_REPORTING=true

# =============================================================================
# FILE PERMISSIONS (Unix-style octal)
# =============================================================================

# Database file permissions (600 = owner read/write only)
DATABASE_PERMISSIONS=600

# Log file permissions (600 = owner read/write only)
LOG_PERMISSIONS=600

# Config file permissions (600 = owner read/write only)
CONFIG_PERMISSIONS=600

# =============================================================================
# NLP CONFIGURATION
# =============================================================================

# Enable natural language processing
NLP_ENABLED=true

# NLP model to use
NLP_MODEL=en_core_web_sm

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================

# Timezone (leave empty for auto-detection)
TIMEZONE=

# Auto-detect timezone
TIMEZONE_AUTO_DETECT=true

# =============================================================================
# GOOGLE CALENDAR INTEGRATION (Optional)
# =============================================================================

# Path to Google client secret file
GOOGLE_CLIENT_SECRET_PATH=client_secret.json 